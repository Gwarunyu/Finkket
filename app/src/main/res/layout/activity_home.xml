<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.nuttwarunyu.finkket.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="Garden Designer"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_title"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_launcher" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="match_parent"
        android:layout_marginRight="40dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <Button
            android:id="@+id/camera_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loadPhoto_btn"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_login"
            android:drawableRight="@drawable/camera"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:text="Camera" />

        <Button
            android:id="@+id/loadPhoto_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/button_login"
            android:drawableRight="@drawable/gallery"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:text="Gallery" />
    </RelativeLayout>


</LinearLayout>
